<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wilsonzhu.calendar_app">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:name=".Utils.MyApplicationVar"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".activity.BusStopsActivity"/>

        <activity android:name=".activity.CalendarActivity"/>

        <activity android:name=".activity.DescriptionDetailsActivity"/>

        <activity android:name=".activity.BusesActivity"/>

        <activity android:name=".activity.TTCSubwayLinesActivity"></activity>

    </application>

</manifest>