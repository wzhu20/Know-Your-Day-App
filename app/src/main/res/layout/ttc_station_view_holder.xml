<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ttc_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ttc_station_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/ttc_station_right_guideline"/>
    
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttc_station_right_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="375dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttc_station_left_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="12dp"/>


</android.support.constraint.ConstraintLayout>
